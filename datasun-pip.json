{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "pIPAddName":{
            "defaultValue": "supip",
            "type": "string"
        },
          "location": {
            "defaultValue": "westus",
            "type": "string"
        },
          "uniqueNamePrefix":{
            "type": "string"
        },
        "pIPAddType":{
            "type": "string"
        }
      },
    "variables": {},
    "resources": [
            {
            "apiVersion":"2016-03-30",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[parameters('pIPAddName')]",
            "properties": {
                "publicIPAllocationMethod":"[parameters('pIPAddType')]",
                "dnsSettings": {
                    "domainNameLabel": "[parameters('uniqueNamePrefix')]"
                }
            }
        }
    ]
}
