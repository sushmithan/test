{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
            "nicName":{
            "type": "string",
            "defaultValue": "nicsush"
        },
          "location": {
            "defaultValue": "westus",
            "type": "string"
         },
            "vNetName":{
            "type": "string",
            "defaultValue": "vnetsush"
        },
         "pIPAddName":{
            "defaultValue": "supip",
            "type": "string"
            
        },
        "subnetRef":{
            "type": "string"
        },
          "tag": {
            "type": "object",
            "defaultValue": {
                "key1": "key",
                "value1": "value"
            },
            "metadata": {
                "description": "Tag Values"
            }
        }
    },
    
    "variables":{},
    "resources": [
           {
            "comments": "Network Interface Resource",
            "apiVersion":  "2015-06-15",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[parameters('nicName')]",
            "location": "[parameters('location')]",
            "tags": {
                "[parameters('tag').key1]": "[parameters('tag').value1]"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses',parameters('pIPAddName'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/networkInterfaces',parameters('subnetRef')]"
                            }
                        }
                    }
                ]
            }
        }
    ]
}
